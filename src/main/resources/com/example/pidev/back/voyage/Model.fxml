<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane stylesheets="@../../MainStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane layoutX="30.0" layoutY="30.0" style="-fx-background-color: white;" styleClass="window-rounded" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
        <effect>
            <DropShadow blurType="GAUSSIAN" color="#00000033" height="50.0" radius="24.5" width="50.0" />
        </effect>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <VBox spacing="10.0">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
                <Text fx:id="villeDepartText" text="VilleDepart" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>
                <Text fx:id="heureDepartText" text="HeureDepart" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>
                <Text fx:id="typeVoyageText" text="TypeVoyage" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>
                <Text fx:id="activitesText" text="Activites" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>


            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
                <Text fx:id="destinationText" text="Destination" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>
                <Text fx:id="heureArriveeText" text="HeureArrivee" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>
                <Text fx:id="typeText" text="Type" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Text>


            </VBox>

            <VBox>
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
                <Button fx:id="deleteButton" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="light-button" text="Supprimer">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </VBox>

        </HBox>
    </AnchorPane>
</AnchorPane>
